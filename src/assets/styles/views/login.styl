@import 'packages/variable'

.mes-login{
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: url('/static/images/img_login_bg.jpg') no-repeat center;
    .mes-login__form{
        width: 450px;
    }
    .al-tabs__group{
        margin-top: 25px;
        box-shadow: 0 0 8px 1px rgba(0,0,0,.4)
    }
    .al-tabs__content{
        padding: 25px;
        background-color: $gf;
    }
    .al-tabs__pane{
        color: $gf;
        line-height: 40px;
        background-color: rgba(0,0,0,.2);
        &.active{
            color: $g6;
            background-color: $gf;
        }
    }

    .al-input:nth-of-type(2){
        position: relative;
        top: -1px;
    }

    .al-input__inner{
        position: relative;
        z-index: 1;
        &:focus{
            z-index: 2;
            border: 1px solid #1f8ae9;
        }
    }
    .al-button{
        margin-top: 24px;
        height: 40px;
        line-height: 40px;
    }
}
